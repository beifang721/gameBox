/* pages/goldList/goldList.wxss */
.header-bg{
  width: 100%;
  height: 200rpx;
  background-color: #3d6fde;
  display: flex;
  display: -webkit-flex;
  align-items: center;
}
.avatarUrl{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin: 0 20rpx;
}
.global-gold38{
  vertical-align: middle;
  margin: 0 10rpx;
}
.gold-wrap{
  margin-top: 20rpx;
}
.swiper-wrap{
  display: flex;
  display: -webkit-flex;
  margin: auto;
  border: 1px solid #41a2f8;
  width: 552rpx;
  border-radius: 50px;
  height: 65rpx;
  line-height: 65rpx;
  margin-top: 30rpx;
  overflow: hidden;
}
.swiper-wrap-list{
  width: 50%;
  color: rgb(65, 162, 248);
}
.swiper-wrap .active{
  color: #fff;
  background-color: #41a2f8;
}
.scroll-wrap{
  margin-top: 30rpx;
  /* border: 1px solid #3d6fde; */
}
.item{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  width: 85%;
  margin: auto;
  padding: 20rpx;
  border-bottom: 1px dashed #ddd;
}