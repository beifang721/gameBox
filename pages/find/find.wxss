/* pages/find/find.wxss */
.width702{
  width: 702rpx;
  margin: auto;
}
.find-title{
  padding: 25rpx 0; 
}
.findLogo{
  position: relative;
  height: 760rpx;
  display: block;
  margin: auto;
  background-size: 100% 100%;
}
.findLogo .game-intro-bg{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 140rpx;
  background-color: rgba(0, 0, 0,0.5);
  z-index: 100;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: space-around;
}
.left image{
  width: 100rpx;
  height: 100rpx;
}
.left{
  display: flex;
  display: -webkit-flex;
  align-items: center;
}
.left-view{
  margin-left: 10rpx;
}
.left-view view:nth-child(1){
  color: #fff;
}
.left-view view:nth-child(2){
  margin-top: 5rpx;
  color: rgb(177, 174, 174);
}
.right button{
  color: rgb(66, 161, 238);
}
