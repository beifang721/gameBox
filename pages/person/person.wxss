/* pages/person/person.wxss */
@import "/template/missionTemplate.wxss"; 
@import "/template/dialog.wxss"; 
page{
  background-color: #f5f5f5;
}
.header-bg{
  width: 100%;
  height: 224rpx;
  position: relative;
}
.person-img-bg{
  position: absolute;
  width: 100%;
  height: 224rpx;
  top: 0
}
.header-content{
  position: relative;
  z-index: 1;
  display: flex;
  display: -webkit-flex;
  align-items: center
}
.avatarURl{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin: 0 15rpx;
}
.gender{
  width: 47rpx;
  height: 31rpx;
  margin-left: 5px;
}
.view-bottom{
  margin-top: 10rpx;
  display: flex;
  display: -webkit-flex;
  align-items: flex-end;
}
.grade-wrap{
  background-color: #fff;
  border-radius: 50px;
  width: 120rpx;
  height: 38rpx;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: center
}
.grade-icon{
  width: 37rpx;
  height: 29rpx;
  margin-right: 3px;
}
.global-gold38{
  vertical-align: middle;
  margin:0 15rpx;
}
.globalredpacktet-icon{
  margin:0 15rpx;
}
.deposit-Btn{
  width: 115rpx;
  height: 38rpx;
  vertical-align: middle;
  margin-left: 15rpx; 
}
.water-ripple{
  position: absolute;
  z-index: 10;
  right:95rpx;
  top: 22rpx;
  transform: rotateX(65deg);
}
.outRound{
  width: 100rpx;
  height: 100rpx;
  animation: scaleOut 2.8s linear infinite; 
}
.centerRound{
  width: 70rpx;
  height: 70rpx;
  
}
.inRound{
  width: 40rpx;
  height: 40rpx;
}
.outRound,.centerRound,.inRound{
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #d5effc;
  border-radius: 50%;
  
}
@keyframes scaleOut{
  0%{
    transform: scale(0);
  }30%{
    /* opacity: 0.9; */
  }
  90%{
    transform: scale(2.0);
    opacity: 0;
  }
  100%{
    transform: scale(0);
    opacity: 0;
  }
}
.max-btn-wrap{
  display: flex;
  display: -webkit-flex;
  justify-content: space-around;
  /* margin-top: 15rpx; */
  background-color: #fff;
  padding:15rpx 0 15rpx 0;
}
.max-btn-wrap .pub{
  width: 302rpx;
  height: 156rpx;
  position: relative;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  /* box-shadow: 0px 3px 3px 0px  rgba(0, 0, 0, 0.5); */
}
.max-btn-wrap .left{
  background-image: url("https://caituwang.yisougame.cn/source_material/gameBox/person/myGold-InfoBG.png");
}
.max-btn-wrap .right{
  background-image: url("https://caituwang.yisougame.cn/source_material/gameBox/person/turntable-BG.png");
}
.left .gold-icon{
  width: 44rpx;
  height: 44rpx;
  margin: 0 15rpx 0 30rpx;
}
.right .turntable-icon{
  width: 70rpx;
  height: 57rpx;
  margin: 0 15rpx 0 30rpx;
}
.myGold-text{
  color: #fff;
}

.swiperWrap{
  /* margin-top:92rpx; */
  background-color: #fff;
  padding: 20rpx 0 50rpx 0;
}
.swiperWrap swiper{
  width: 702rpx;
  height: 200rpx;
  margin: auto;

}
.slide-image{
  width: 702rpx;
  height: 200rpx;
}

.more-gold{
  color: rgb(102, 102, 102);
  padding: 15rpx 0;
  background-color: #fff;
  margin: 1px 0 0 0;
}