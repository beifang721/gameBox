/**index.wxss**/
@import "/template/dialog/dialog.wxss"; 
page{
  background-color: #f5f5f5;
  position: relative;
  height: 100%;
}
.ml15{
  margin-left: 15rpx;
}
.header-flex{
  width: 100%;
  height: 90rpx;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: space-between;
  background-color: #ffffff;
  position: fixed;
  top: 0;
  z-index: 100;
  overflow: hidden;
}
.left-wrap{
  margin-left: 15rpx;
}
.left-wrap .f30{
  margin-left: 3px;
  letter-spacing: 3px;
}
.right-wrap{
  margin-right: 15rpx;
}
.right-wrap{
  display: flex;
  display: -webkit-flex;
  align-items: center;
}
.grade-icon{
  width: 37rpx;
  height: 29rpx;
}

.right-item{
  display: flex;
  display: -webkit-flex;
  align-items: center;
}
.right-item view{
  display: inline-block;
  /* width: 120rpx; */
  margin: 0 20rpx;
  overflow: hidden;
  white-space:nowrap;
  text-align: center;
}
.sign-button{
  height: 56rpx;
  font-size: 24rpx;
  background-color: #41a2f8;
  color: #fff;
}
.swiperWrap{
  /* margin-top:92rpx; */
  background-color: #fff;
  padding: 20rpx 0;
}
.swiperWrap swiper{
  width: 702rpx;
  height: 200rpx;
  margin: auto;

}
.slide-image{
  width: 702rpx;
  height: 200rpx;
}
.game-item-wrap{
  color: rgb(56, 56, 56);
  margin-top: 2rpx;
  background-color: #fff;
  padding: 20rpx 0;
}
.game-title{
  width: 96%;
  margin: auto;
}
.game-list{
  display: flex;
  display: -webkit-flex;
  justify-content: space-around;
  align-items: center
}

.game-item image{
  width: 152rpx;
  height: 152rpx;
  margin: 16rpx 0;
}
.p_2{
  color: rgb(132, 132, 132);
  padding: 5rpx 0;
}

.footer{
  padding: 25rpx 0;
  text-align: center;
  background-color: #f5f5f5;
  color: rgb(190, 190, 190);
}