.marquee_wp{
  width: 682rpx;
  height: 591rpx;
  background-image: url("https://caituwang.yisougame.cn/source_material/gameBox/slots/circle.png");
  background-size: 100% 100%;
  position: absolute;
  bottom: 130rpx;
  left: 50%;
  transform: translateX(-50%);
  /* margin: 0 20rpx; */
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  /* justify-content: space-between; */
  /* padding:  */
}
.lamp{
  position: absolute;
  width: 678rpx;
  height: 570rpx;
}
.marquee_wp .marquee_item{
  width: 191rpx;
  height: 160rpx;
  background-image: url("https://caituwang.yisougame.cn/source_material/gameBox/slots/prize-bg-1.png");
  background-size: 100% 100%;
  box-sizing: border-box;
}
.marquee_wp .marquee_item.on{
  opacity: 1;
  background-image: url("https://caituwang.yisougame.cn/source_material/gameBox/slots/prize-bg-2.png");
}
.marquee_wp .marquee_item image{
  display: block;
  width: 100%;
  height: 100%;
}
.marquee_wp .marquee_item:nth-child(3n){
  margin-right: 0;
}
.marquee_wp .marquee_item_btn{
  position: relative;
  z-index: 100;
  background-image: url("https://caituwang.yisougame.cn/source_material/gameBox/slots/star-btn.png");
  /* background: transparent; */
}
.marquee_wp .marquee_item_btn text{
  display: block;
  text-align: center;
  color: #fff;
}
.item-wrap{
  width: 590rpx;
  height: 490rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-top: 40rpx;
}